{
  "compilerOptions": {
    "target": "ES5",
    "lib": ["DOM", "ES6", "ES2017", "ESNext"],
    "module": "ESNext",
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false
  },
  "include": ["src/**/*", "index.d.ts"],
  "exclude": ["node_modules", "build", "dist"]
}
